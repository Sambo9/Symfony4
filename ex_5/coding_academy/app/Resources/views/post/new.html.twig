{% extends 'base.html.twig' %}

{% block body %}
    <h1>Post creation</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        {% for name in categories|sort %}
          {{ name.name }}&nbsp;<input type="checkbox" name="category[]" id="category" value="{{ name.name }}">&nbsp;
        {% endfor %}
        <br>
        <input type="submit" value="Create" />
    {{ form_end(form) }}

    <ul>
        <li>
            <a href="{{ path('post_index') }}">Back to the list</a>
        </li>
    </ul>
{% endblock %}
